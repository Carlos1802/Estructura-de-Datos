
//Fecha.h

#pragma once
#include <string>
using namespace std;

class Fecha
{
private:
	int day;
	int month;
	int year;

public:
	Fecha(int _day,int _month,int _year);
	Fecha(long _fecha);
	Fecha(string _fecha);
	~Fecha(void);

	bool validarFecha();

	int getDay();
	int getMonth();
	int getYear();
};

//Fecha.cpp

#include "StdAfx.h"
#include "Fecha.h"
#include <string>
using namespace std;


Fecha::Fecha(int _day,int _month,int _year)
{
	day = _day;
	month = _month;
	year = _year;
}


Fecha::~Fecha(void)
{
}

Fecha::Fecha(string _fecha)
{
	//Separar los valores de interes de la cadena parametro (_fecha);
	string sdia = _fecha.substr(0,2);
	string smes = _fecha.substr(3,2);
	string sanho = _fecha.substr(6,4);

	day = 0;
	int lond = sdia.length();
	for(int i=0;i<lond;i++)
	{
		day = (day*10) + (sdia[i] - '0'); //Para convertir el valor char a int.
	}

	month = 0;
	int lonm = smes.length();
	for(int i=0;i<lonm;i++)
	{
		month = (month*10) + (smes[i] - '0');
	}

	year = 0;
	int lona = sanho.length();
	for(int i=0;i<lona;i++)
	{
		year = (year*10) + (sanho[i] - '0');
	}
}

Fecha::Fecha(long _fecha)
{
	day = int(_fecha/1000000);
	month = int((_fecha-(day*1000000))/10000);
	year = int((_fecha-(day*1000000))-month*10000);
}

bool Fecha::validarFecha()
{
   bool t=true;

   if(month>=1 && month<=12)
   {
	   if(month==1 || month==3 || month==5 || month==7 || month==8 || month==10 || month==12)
		   if (day>=1 && day<=31)
			   return t;
		   else 
			   t=false;
	   else
		   if (month==4 || month== 6 || month==9 || month==11)
			   if(day>=1 && day<=30)
				   return t;
		       else 
				   t=false;
		   else 
			   //Febrero (AÃ±o Bisiesto)
			   if(year%400==0 || (year%4==0 && year%100!=0))
				  if (day>=1 && day<=29)
					  return t;
				  else 
					  t=false;
			   else
				   if (day>=1 && day<=28)
					   return t;
				   else 
					   t=false;
	}
}

int	Fecha::getDay()
{
	return day;
}

int Fecha::getMonth()
{
	return month;
}

int Fecha::getYear()
{
	return year;
}


//EjemploFecha.cpp


#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "Fecha.h"
using namespace std;

void main()
{
	int dia, mes, anho, opcion, dd, mm, aa, repeat;
	string fecha;
	long fec;

	do{

		cout<<"Que estilo de fecha desea ingresar?"<<endl;
		cout<<"1.- dd , mm , aaaa"<<endl;
		cout<<"2.- ddmmaaaa"<<endl;
		cout<<"3.- dd/mm/aaaa"<<endl;
		cout<<"0.- Salir."<<endl;
		cin>>opcion;

		switch(opcion)
		{
		case 1:
			cout<<"Ingrese el dia."<<endl;
			cin>>dia;
			cout<<"Ingrese el mes."<<endl;
			cin>>mes;
			cout<<"Ingrese el anho."<<endl;
			cin>>anho;
			break;
		
		case 2:
			cout<<"Ingrese la fecha."<<endl;
			cin>>fec;	
			break;

		case 3:
			cout<<"Ingrese la fecha."<<endl;
			cin.ignore();
			getline(cin,fecha);
			break;

		case 0:
			cout<<"Saliendo."<<endl;
			break;
		}
	
		if(opcion==1)
		{
			Fecha f1(dia,mes,anho);
	
			if(f1.validarFecha()==true)
			{
				dd = f1.getDay();
				mm = f1.getMonth();
				aa = f1.getYear();
				cout<<"La fecha es valida."<<endl;
				cout<< dd <<"/"<< mm <<"/"<< aa <<endl;
				system("pause>null");
			}
			else
			{
				cout<<"Fecha erronea."<<endl;
				system("pause>null");
			}
		}
	
		if(opcion==2)
		{
			Fecha f1(fec);
			
			if(f1.validarFecha()==true)
			{
				dd = f1.getDay();
				mm = f1.getMonth();
				aa = f1.getYear();
				cout<<"La fecha es valida."<<endl;
				cout<< dd <<"/"<< mm <<"/"<< aa <<endl;
				system("pause>null");
			}
			else
			{
				cout<<"Fecha erronea."<<endl;
				system("pause>null");
			}
		}

		if(opcion==3)
		{
			Fecha f1(fecha);
	
			if(f1.validarFecha()==true)
			{
				dd = f1.getDay();
				mm = f1.getMonth();
				aa = f1.getYear();
				cout<<"La fecha es valida."<<endl;
				cout<< dd <<"/"<< mm <<"/"<< aa <<endl;
				system("pause>null");
			}
			else
			{
				cout<<"Fecha erronea."<<endl;
				system("pause>null");	
			}
		}
	}while(opcion!=0);

	getch();
}


